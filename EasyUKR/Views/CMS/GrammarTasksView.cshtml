@using EasyUKR.HTMLHelpers
@using EasyUKR.Models
@model List<EasyUKR.DB.GrammarTask>
@{
    ViewBag.Title = "Словник";
}
<link type="text/css" rel="stylesheet" href="~/Content/Site.css"/>
<style>
    #container {
        border: 2px solid gray;
        border-radius: 10px;
        background: white;
        width: 300px;
        padding: 5px;
        height: auto;
        overflow-x: hidden;
        overflow-y: hidden;
        text-align: center;
        cursor: pointer;
        float: left
    }
    #words {
        border-radius: 10px;
        background: white;
        width: auto;
        margin: auto;
        max-width: 900px;
        height: auto;
        overflow-x: auto;
        overflow-y: hidden;
        border-color: transparent;
        clear: both
    }
    label {
        font-size: medium;
        font-family: Noto Sans;
     }
    img {
        width: 128px;
        height:128px;
    }
</style>
<body>
    <center>
        <h1>Завдання</h1>
        <div style="background: whitesmoke; border-radius: 15px; border-color: black; width: 400px; height: auto">
        <ul class="list-group">
            @foreach (var item in Model)
            {
                <li class="list-group-item">
                    <div style="height: auto">
                            @Html.LabelForModel(item.Description)
                            <br/>
                            @Html.LabelForModel(item.Translate)
                        <br/>
                        @Html.List(item.GrammarAnswers.Select(x=>new Answer(x.Answer,x.IsCorrect.Value)).ToArray())
                    </div>
                    <center>
                        <a href="@Url.Action("EditTask","CreatingObjects",new {id=item.id})"><img class="web-image" src="~/Content/Web_Buttons/edit.png"/></a>
                        <a href="@Url.Action("DeleteTask", "CreatingObjects", new {id = item.id})"><img class="web-image" src="~/Content/Web_Buttons/garbage.png"/></a>
                    </center>
                </li>
            }
        </ul>
        <a href="@Url.Action("CreateTask", "CreatingObjects", new {id = Model.First().idTopic})">Додати таск</a>
            </div>
        @{
            if ((TempData["TaskSuccess"] != null && (bool)TempData["TaskSuccess"]) || (TempData["DelSuccess"] != null && (bool)TempData["DelSuccess"]))
            {
                <text>
                    <script type="text/javascript">
                        alert('Дані оновлені');
                    </script>
                </text>
                TempData["WordSuccess"] = false;
            }
        }
        <div>
            @Html.ActionLink("Вернуться к списку", "GrammarView", "Cms")
        </div>
    </center>
</body>

