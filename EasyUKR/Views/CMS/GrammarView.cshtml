@using EasyUKR.HTMLHelpers
@model List<EasyUKR.DB.GrammarTopic>
@{
    ViewBag.Title = "Граматики";
}
<style>
    #container {
        border: 2px solid gray;
        border-radius: 10px;
        background: white;
        width: auto;
        height: auto;
        overflow-x: auto;
        overflow-y: hidden;
        text-align: center;
        cursor: pointer;
    }
    label {
        font-size: medium;
        font-family: Noto Sans;
        -webkit-font-smoothing: antialiased;
    }
    img {
        width: 128px;
        height:128px;
    }
</style>
<link rel="stylesheet" href="~/Content/Site.css" type="text/css" />
<body>
<center>
    <h1>Граматики</h1>
    <div style="background: whitesmoke; border-radius: 15px; border-color: black; width: 400px; height: auto">
        <ul class="list-group">
            @foreach (var item in Model)
            {
                    <li class="list-group-item">
                        <a href="@Url.Action("GrammarTasksView", new { id = item.id })">
                            <div id="container">
                                    <div class="col-sm-7" style="vertical-align: middle">
                                        @Html.LabelForModel(item.Header + "\n")
                                        @Html.LabelForModel(item.Translate + "\n")
                                        <br/>
                                        <br />
                                        <a href="@Url.Action("OpenDoc", "Extension", new { file = item.File })" target="_blank">Open file here</a>
                                    </div>
                                <center>
                                    <a href="@Url.Action("DeleteGrammar", "CreatingObjects", new { id = item.id })" ><img class="web-image" src="~/Content/Web_Buttons/garbage.png" /></a>
                                </center>
                                </div>                    
                        </a>
                        
                    </li>
            }
        </ul>
        <a href="@Url.Action("CreateGrammar", "CreatingObjects")">Додати граматику</a>
        @{
            if ((TempData["TopicSuccess"] != null && (bool) TempData["TopicSuccess"]) || (TempData["DelSuccess"] != null && (bool) TempData["DelSuccess"]))
            {
                <text>
                    <script type="text/javascript">
                        alert('Дані оновлені');
                    </script>
                </text>
                TempData["TopicSuccess"] = false;
            }
        }
    </div>
</center>
</body>

